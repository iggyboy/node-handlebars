<div id="container">
    <h1>Borger</h1>

    <img src="https://img.freepik.com/free-vector/hamburger_53876-25481.jpg?size=338&ext=jpg" alt="borger">
    <h2>uneaten borger</h2>
    <ul>
        {{#each burger}}
        {{#unless devoured}}
        <li>
            <p>burger: {{this.burger_name}}</p>
            <button class="burger-button" data-id={{this.id}}>EAT DA BORGER</button>
        </li>
        {{/unless}}
        {{/each}}
    </ul>

    <h2>eaten borger</h2>
    <ul>
        {{#each burger}}
        {{#if devoured}}
        <li>
            <p>burger: {{this.burger_name}}</p>
        </li>
        {{/if}}
        {{/each}}
    </ul>

    <h2>Add a B O R G E R</h2>
    <form class="create-form">

        <div class="form-group">
            <label for="ca">BORGER:</label>
            <input type="text" id="ca" name="borger">
        </div>

        <button id="submit" type="submit">Add Borger</button>
    </form>


</div>